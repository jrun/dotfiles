[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
  a  = add
  ai = add --interactive
  b  = branch
	co = checkout
  ci = commit
  st = status
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s
[merge]
  tool = emerge
[mergetool "emerge"]
  path = emerge-for-git

<% github_user = print("GitHub User: "); STDOUT.flush; STDIN.gets.chomp %>
<% if github_user %>
[github]
  user = <%= github_user %>
<% end %>
